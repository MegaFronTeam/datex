mixin top-nav(active) 
	// start top-nav
	+b.top-nav.block-with-lazy
		.row
			.col-auto.d-lg-none
				+menu-toggle()
			.col-lg-auto.col
				+e.logo
					a(href="/")
						img(src="img/svg/logo.svg", alt="")
			+e.col.col-lg.col-auto
				.menu-mobile.menu-mobile--js
					.menu-mobile__inner
						+menu-toggle()
						+mnu(active)
						+b.menu-info
							+e.location
								+e.loc-pic
									img(src="img/svg/location-pic.svg", alt="")
								+e.city Cамара
								+e.link(href="#") Посмотреть на карте
							+e.link-block
								+e.tel(href="tel:+78005005748")  8 (800) 500-57-48
								+e.link(href="mailto:hr@datexsoft.ru") hr@datexsoft.ru
							+e.policy-block
								p © Datexsoft 2022. Все права защищены.
								+e.link(href="#") Политика конфиденциальности
							+e.home-link(href="#")
								span основной сайт
								+icon('arrow-right-top')

			.col-auto
				+e.tel(href="tel:+78005005748")
					+icon('phone')
					+e.tel-number 8 (800) 500-57-48
	// end top-nav